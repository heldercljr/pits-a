{
	"compilerOptions": {
		"target": "es2016",
		"lib": [
			"es6"
		],
		"module": "commonjs",
		"rootDir": "src",
		"resolveJsonModule": true,
		"allowJs": true,
		"sourceMap": true,
		"outDir": "build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@controllers/*": ["src/controllers/*"],
			"@services/*": ["src/services/*"],
			"@models/*": ["src/models/*"],
			"@routes/*": ["src/routes/*"]
		}
	}
}
